<?xml version="1.0"?>
 
<project name="TestSuite" default="CreateJarFile">
	<target name="CreateJarFile">

		<delete file="../TestSuite.jar"/>
		<property name="version.num" value="0.2.0"/>
	    <buildnumber file="build.num"/>
		<manifest file="MANIFEST.MF">
	        <attribute name="Created-By" value="TestToolInterfaces.org"/>
	        <attribute name="Built-By" value="${user.name}"/>
	        <attribute name="Implementation-Title" value="Test Tool Interfaces - Test Suite" />
	        <attribute name="Implementation-Version" value="${version.num}.${build.number}"/> 
	        <attribute name="Implementation-Vendor" value="Open Source - Arjan Kranenburg" />
	        <attribute name="Specification-Title" value="Test Tool Interfaces - Test Suite" />
	        <attribute name="Specification-Version" value="0.2" />
	        <attribute name="Specification-Vendor" value="TestToolInterfaces.org" />
	    </manifest>
		
		<jar destfile="../TestSuite.jar" manifest="MANIFEST.MF">
			<zipfileset dir="bin" prefix="" />
			<zipfileset dir="src" prefix="" />
			<zipfileset src="lib/Utils.jar" />
		</jar>
		
		<delete file="MANIFEST.MF"/>
	</target>
</project>
